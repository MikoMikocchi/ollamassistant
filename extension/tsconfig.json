{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "lib": [
            "ES2022",
            "DOM",
            "WebWorker"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "ui/**/*.svelte"
    ],
    "exclude": [
        "dist"
    ]
}