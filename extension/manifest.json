{
    "manifest_version": 3,
    "name": "Ollama Assistant (Local)",
    "version": "0.1.0",
    "description": "Локальный ассистент с Ollama: overlay, контекстное меню и стрим без внешнего трафика.",
    "action": {
        "default_title": "Ollama Assistant"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1/*",
        "http://localhost/*"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {},
    "commands": {
        "toggle-overlay": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Ctrl+K",
                "windows": "Ctrl+K",
                "linux": "Ctrl+K"
            },
            "description": "Открыть/закрыть Overlay"
        }
    }
}