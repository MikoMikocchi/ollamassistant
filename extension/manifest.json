{
    "manifest_version": 3,
    "name": "__MSG_ext_name__",
    "default_locale": "en",
    "version": "0.1.0",
    "description": "__MSG_ext_description__",
    "action": {
        "default_title": "__MSG_action_title__",
        "default_icon": {
            "16": "public/icon16.png",
            "32": "public/icon32.png",
            "48": "public/icon48.png",
            "128": "public/icon128.png"
        }
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:11434/*",
        "http://localhost:11434/*"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "public/icon16.png",
        "32": "public/icon32.png",
        "48": "public/icon48.png",
        "128": "public/icon128.png"
    },
    "commands": {
        "toggle-overlay": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Ctrl+K",
                "windows": "Ctrl+K",
                "linux": "Ctrl+K"
            },
            "description": "__MSG_cmd_toggle_overlay_description__"
        }
    }
}